Subject: [PATCH] Add builtin settings


diff --git a/src/main/resources/settings/yukkit-behind-bungee.yml b/src/main/resources/settings/yukkit-behind-bungee.yml
new file mode 100644
index 000000000..9553cd80b
--- /dev/null
+++ b/src/main/resources/settings/yukkit-behind-bungee.yml
@@ -0,0 +1,22 @@
+         ###
+      ###  #
+    ##     ###########################################
+  ##                                                 #
+##           [WARNING]: DO NOT EDIT THIS FILE!       #
+  ##                                                 #
+    ##     ###########################################
+      ###  #
+         ###
+
+# This file is a built-in configuration file.
+# This file will be deleted without notice.
+# -> You can add a NEW file (ex. "99-my-config.yml") to save your settings safely and overwrite the settings in this file!
+
+server-properties:
+  online-mode: false
+
+bukkit-yml:
+  settings.connection-throttle: -1
+
+spigot-yml:
+  settings.bungeecord: true
diff --git a/src/main/resources/settings/yukkit.yml b/src/main/resources/settings/yukkit.yml
new file mode 100644
index 000000000..9a536772b
--- /dev/null
+++ b/src/main/resources/settings/yukkit.yml
@@ -0,0 +1,29 @@
+         ###
+      ###  #
+    ##     ###########################################
+  ##                                                 #
+##           [WARNING]: DO NOT EDIT THIS FILE!       #
+  ##                                                 #
+    ##     ###########################################
+      ###  #
+         ###
+
+# This file is a built-in configuration file.
+# This file will be deleted without notice.
+# -> You can add a NEW file (ex. "99-my-config.yml") to save your settings safely and overwrite the settings in this file!
+
+server-properties:
+  view-distance: 7
+  max-players: 2020
+  motd: '&7// &aYukkit&7 //\n&f&nUser friendly and flexible Paper fork.'
+
+bukkit-yml:
+  settings.world-container: worlds
+
+paper-yml:
+  settings.max-player-auto-save-per-tick: 2
+  world-settings.default.max-auto-save-chunks-per-tick: 6
+  world-settings.default.hopper.disable-move-event: true
+  world-settings.default.prevent-moving-into-unloaded-chunks: true
+  world-settings.default.optimize-explosions: true
+  world-settings.default.queue-light-updates: true
